var win = Ti.UI.createWindow();

var navWin = Ti.UI.createWindow({
	title:"Project4",
	modal:true,
	backgroundColor: "#333", 
	layout: "horizontal"
});

var navGroup = Ti.UI.iPhone.createNavigationGroup({
	window: navWin
});


var newView = Ti.UI.createView({
	backgroundColor: "#fff",
	height: 100,
	top: 40,
	left : 10,
	right: 10
});

var newLabel = Ti.UI.createLabel({
	text: "Gallery",
	font:{fontSize: 24, FontFamily:"Helvetica"},
	color: "#333",
	left: 20
});

newView.add(newLabel);

var gPic = function(){
	var gWin = Ti.UI.createWindow({
		title: "Gallery",
		modal: true,
		backgroundColor: "#333"
	});
	navGroup.open(gWin,{animation: true});
};

newView.addEventListener('click', gPic);

// Add to the parent view.

navGroup.add(newView);
win.add(navGroup);
win.open();

