var win = Ti.UI.createWindow({
	title:"Project4",
	modal:true,
	backgroundColor: "#333" 
});


// Create a Button.
var Gallery = Ti.UI.createButton({
	title : 'Gallery',
	height : 100,
	width : 200,
	top : 10,
	left : 10
});

// Listen for click events.
Gallery.addEventListener('click', function() {
	alert('\'Gallery\' was clicked!');
});

// Add to the parent view.
win.add(Gallery);
win.open();
