var gPic = function(){
	var gWin = Ti.UI.createWindow({
		title: "Gallery",
		modal: true,
		backgroundColor: "#333",
		url:"gallery.js"
	});
	navGroup.open(gWin,{animation: true});
};


// Create a Button.
var Gallery = Ti.UI.createButton({
	title : 'Gallery',
	height : 100,
	width : 300,
	top : 60,
	left : 10
});

// Listen for click events.
Gallery.addEventListener('click',gPic);
// Add to the parent view.



//newView.addEventListener('click', gPic);

// Add to the parent view.

//navGroup.add(newView);
navWin.add(Gallery);

win.add(navGroup);
win.open();

