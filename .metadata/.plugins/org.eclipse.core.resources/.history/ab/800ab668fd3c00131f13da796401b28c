var win = Ti.UI.createWindow();

var navWin = Ti.UI.createWindow({
	title:"Project4",
	modal:true,
	backgroundColor: "#333", 
	layout: "horizontal"
});

var navGroup = Ti.UI.iPhone.createNavigationGroup({
	window: navWin
});

// var newView = Ti.UI.createView({
