var favoriteGames = ["Mario","Skyrim","GTA-V","Gears OF War","Bioshock"];


	var gameView = Ti.UI.createView({
	backgroundColor: "#fff",
	width: 270,
	height: 270,
	top:30
});
var displayAlert = function() {
	var startingTop = 50;
    for(var i=0, j=favoriteGames.length; i<j; i++){
    	var quoteView = Ti.UI.createView({
			backgroundColor: "#fff",
			height: 30,
			top: startingTop,
			left: 20,
			right: 20,
			borderRadius: 5
		});



		var quoteText = Ti.UI.createLabel({
			text: favoriteGames[i],
			font: {fontSize: 20, fontFamily: "Arial"},
			textAlign: "center"
		});
		quoteView.add(quoteText);
		mainWindow.add(quoteView);
		startingTop = startingTop + quoteView.height + 10;
    }
    buttonView.top = startingTop + quoteView.height;
};
mainWindow.add(gameView);
buttonView.addEventListener("click", displayAlert);
buttonView.addEventListener("click", displayAlert);
