var favoriteGames = ["Mario","Skyrim","GTA-V","Gears OF War","Bioshock"];
var count = 0;
	
var gameView = Ti.UI.createView({
	backgroundColor: "#fff",
	top: 10,
	left:10,
	right: 10,
	height: 300,
	borderRadius:25
});	

var gameText = Ti.UI.createlabel({
	text: favoriteGames[3],
	font: {fontSize:16, fontFamily:"helvetica"}
});
		
var next = function(){
	if (count < favoriteGames.length + 1){
		count++;
	}else{
		count = 0;
	}
};
gameView.add(gameText);
mainWindow.add(gameView);
buttonView.addEventListener("click", next);
//buttonView2.addEventListener("click", displayAlert2);
