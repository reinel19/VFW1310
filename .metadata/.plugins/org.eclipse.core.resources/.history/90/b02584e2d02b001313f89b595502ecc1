var food = ["Pasta","Salad","Apple","Pizza"];

var mainWindow = Ti.UI.createWindow({
	title: "Event listeners and Even Handlers",
	modal: true,
	backgroundColor: "#333"
});

var quoteView = Ti.UI.createView({
	backgroundColor: "#fff",
	height: 150,
	top: 50,
	left: 20,
	right: 20,
	borderRadius: 5
});

var quoteText = Ti.UI.createLabel({
	text: "Click below to start",
	font: {fontSize: 20, fontFamily: "Arial"},
	textAlign: "center"
});

var buttonView = Ti.UI.createView({
	backgroundColor: "#23ba00",
	top: quoteView.top + quoteView.height + 15,
	left: 20,
	right: 20,
	borderRadius: 5,
	height: 50
});

var buttonText = Ti.UI.createLabel({
	color: "#fff",
	font: {fontSize:16, fontFamily: "Arial"},
	textAlign: "center",
	text:"Change Text"
});
var displayAlert = function() {
    quoteText.Text = food;
};

buttonView.addEventListener("click", displayAlert);

quoteView.add(quoteText);
buttonView.add(buttonText);
mainWindow.add(quoteView,buttonView);
mainWindow.open();
