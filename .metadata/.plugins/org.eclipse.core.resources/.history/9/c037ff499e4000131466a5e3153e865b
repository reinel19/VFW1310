var favoriteGames = ["Mario","Skyrim","GTA-V","Gears OF War","Bioshock"];
var count = 0;
	
var gameView = Ti.UI.createView({
	backgroundColor: "#fff",
	top: 10,
	left:10,
	right: 10,
	height: 300,
	borderRadius:25
});	
	
	
	
var next = function(){
	if (count < favoriteGames.length + 1){
		count++;
	}else{
		count = 0;
	}
};


buttonView.addEventListener("click", next);
