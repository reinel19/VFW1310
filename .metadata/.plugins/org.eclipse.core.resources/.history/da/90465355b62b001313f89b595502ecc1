var mainWindow = Ti.UI.createWindow({
	
	title:"First Window",
	modal:true,
	backgroundColor:"#ff0000"
	
});

var myContent = Ti.UI.createLabel({
	text: "Hello World!",
	color: "#333",
	textAlign: "center",
	width: 200,
	height: 100,
	font:{fontSize:20, fontFamily:"Helverica"}
});

mainWindow.add(myContent);
mainWindow.open();
 
