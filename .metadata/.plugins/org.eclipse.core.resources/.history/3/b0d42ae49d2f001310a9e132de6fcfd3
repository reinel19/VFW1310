var win = Ti.UI.createWindow();

var produce = [{title: "Apples", description:"there are a lot of different kind of apples."}, {title: "Bananas", description: "there are a lot of different kind of bananas."}]; 
//var vege  = [{title: "Carrots"}, {title: "Potatos"}];

var table = Ti.UI.createTableView({
	style: Ti.UI.iPhone.TableViewStyle.GROUPED,
});
var getProduceDetail = function(argument) {
  	var detailWindow = Ti.UI.createWindow({
  		backgroundColor: "#fff",
  		title: this.title,
  		modal: true
  	});
  	var detailText = Ti.UI.createLabel({
  		text: this.desc
  	});
  	detailWindow.add(detailText);
};

var produceSection = Ti.UI.createTableViewSection({
	headerTitle: "Produce",
	footerTitle: "List of produce we need to buy"
});

for (var i=0, j=produce.length; i<j; i++ ){
	var theRow = Ti.UI.createTableViewRow({
		title: produce[i].title,
		desc: produce[i].description,
		hasChild: true
	});
	produceSection.add(theRow);
	theRow.addEventListener("click", getProduceDetail);	
};

/*var vegeSection = Ti.UI.createTableViewSection({
	headerTitle: "Vegetables",
	footerTitle: "List of vegetables we need to buy"
});

for (var i=0, j=vege.length; i<j; i++ ){
	var theRow = Ti.UI.createTableViewRow({
		title: vege[i].title,
		hasChild: true
	});
	vegeSection.add(theRow);
	theRow.addEventListener("click", getVegeDetail);	
};
*/

var mySections = [produceSection,];

table.setData(mySections);

win.add(table);
win.open();
